<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_transaction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <android.support.v4.view.ViewPager
            android:id="@+id/cards_viewpager"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_dots"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:layout_constraintTop_toBottomOf="@id/cards_viewpager"/>
        <RadioGroup
            android:id="@+id/type_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tab_dots">

            <RadioButton
                android:id="@+id/out_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_radio_btn"
                android:button="@null"
                android:checked="true"
                android:text="Расход"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/in_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_radio_btn"
                android:button="@null"
                android:text="Доход"
                android:textAlignment="center" />
        </RadioGroup>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_category"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_square"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_radio"/>

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/transaction_category"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#e8e8e8"
            android:padding="4dp"
            android:singleLine="true"
            android:textColorHint="#757575"
            android:hint="@string/category"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_radio" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_amount"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_wallet"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_category"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/transaction_amount"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#e8e8e8"
            android:padding="4dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColorHint="#757575"
            android:hint="Сумма"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_category" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_currency"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_currency"
            android:layout_marginTop="44dp"
            app:layout_constraintLeft_toLeftOf="@id/icon_amount"
            app:layout_constraintTop_toBottomOf="@id/icon_amount"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/transaction_currency_spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:entries="@array/currency_types"
            android:prompt="@string/currency"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#e8e8e8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_amount"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:background="@drawable/save_btn_background"
            android:textColor="@color/white"
            android:text="@string/add"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@id/transaction_currency_spinner"
            app:layout_constraintTop_toBottomOf="@id/transaction_currency_spinner"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>